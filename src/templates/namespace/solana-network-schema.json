{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "nodeURL": { "type": "string" },
    "nativeCurrencySymbol": { "type": "string" },
    "rpcProvider": {
      "type": "string",
      "enum": ["url", "helius"],
      "description": "RPC provider to use: 'url' for standard nodeURL, 'helius' for Helius service"
    },
    "defaultComputeUnits": { "type": "number" },
    "confirmRetryInterval": { "type": "number" },
    "confirmRetryCount": { "type": "number" },
    "minPriorityFeePerCU": { "type": "number" }
  },
  "required": ["nodeURL", "nativeCurrencySymbol"],
  "additionalProperties": false
}
